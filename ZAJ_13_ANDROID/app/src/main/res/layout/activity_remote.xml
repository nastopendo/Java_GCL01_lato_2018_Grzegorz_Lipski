<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".RemoteActivity">

    <Button
        android:id="@+id/bRemoteAF"
        android:layout_width="221dp"
        android:layout_height="0dp"
        android:layout_marginBottom="47dp"
        android:layout_marginTop="127dp"
        android:elevation="0dp"
        android:onClick="onRemoteAfClick"
        android:text="AF"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/bRemoteShoot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bRemoteShoot"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_marginBottom="137dp"
        android:onClick="onRemoteShootClick"
        android:text="SHOOT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bRemoteAF" />
</android.support.constraint.ConstraintLayout>